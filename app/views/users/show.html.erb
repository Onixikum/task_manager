<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <b>
          <%= @user.name %>
        </b><br>
        <b>
          <%= @user.email %>
        </b>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.tasks.any? %>
      <ol>
      <h3>Tasks (<%= @user.tasks.count %>)</h3>
      </ol>
      <ol class="tasks">
        <%= render @tasks %>
      </ol>
      <%= will_paginate @tasks %>
    <% end %>
  </div>
</div>